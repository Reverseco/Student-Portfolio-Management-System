    body {
      background-color: #f5f5f5;
      color: #333;
      font-family: Arial, sans-serif;
    }
 
    h1 {
      color: #333;
      text-align: center;
    }
 
    .semester {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 7px 7px rgba(0, 0, 0, 0.1);
      margin: 20px;
      padding: 20px;
      width: 60%;
      margin-left: 18%;
      transition: all 0.3s ease-in-out;
    }
 
    .semester:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 12px rgba(0, 0, 0, 0.2);
    }
 
 
 
    .semester-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
      text-align: center;
    }
 
    .semester-description {
      font-size: 18px;
      line-height: 1.5;
    }
 
    table {
      border-collapse: collapse;
      width: 100%;
    }
 
    th,
    td {
      text-align: center;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }
 
    th {
      background-color: #164A83;
      color: #fff;
      border-radius: 5px;
    }
 
    .subCode {
      width: 24%;
    }
 
    .edit-btn,
    .delete-btn,
    .addGradeBtn {
      background-color: #164A83;
      border: none;
      border-radius: 10px;
      color: #fff;
      cursor: pointer;
      font-size: 16px;
      margin-right: 10px;
      margin-top: 16px;
      padding: 10px 20px;
      text-decoration: none;
    }
 
 
    @media only screen and (max-width: 768px) {
 
      .edit-btn,
      .delete-btn,
      .addGradeBtn {
        font-size: 14px;
        padding: 8px 16px;
        margin-right: 5px;
        margin-top: 10px;
      }
    }
 
    @media only screen and (max-width: 480px) {
 
      .edit-btn,
      .delete-btn,
      .addGradeBtn {
        font-size: 12px;
        padding: 6px 12px;
        margin-right: 3px;
        margin-top: 8px;
      }
    }
 
    .edit-btn:hover,
    .delete-btn:hover,
    .addGradeBtn :hover {
      background-color: #062e5b;
      background-image: linear-gradient(45deg, #062e5b, #1a3b64, #234a7d, #3a5c8c, #5c769d);
      background-size: 200% 200%;
      animation: gradient-animation 1s ease-in-out infinite;
      box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.75);
      transition: box-shadow 0.2s ease-in-out;
    }
 
    @keyframes gradient-animation {
      0% {
        background-position: 0% 50%;
      }
 
      50% {
        background-position: 100% 50%;
      }
 
      100% {
        background-position: 0% 50%;
      }
    }
 
 
 
    .addGradeBtn {
      margin-top: 10px;
      width: 40%;
      margin-bottom: 70px;
    }
 
    .addBtnDiv {
      display: flex;
      justify-content: center;
    }
 
    .avgCgpa {
      margin-left: 45%;
      color: #164A83;
      font-weight: bold;
      font-size: large;
      margin-top: 10px;
      text-align: center;
      border: 1px solid #164A83;
      border-radius: 10px;
      padding: 5px 10px;
    }
 
    /* Small screens */
    @media only screen and (max-width: 600px) {
      .avgCgpa {
        margin-left: 10%;
      }
    }
 
    /* Medium screens */
    @media only screen and (min-width: 601px) and (max-width: 1024px) {
      .avgCgpa {
        margin-left: 25%;
      }
    }
 
    /* Large screens */
    @media only screen and (min-width: 1025px) {
      .avgCgpa {
        margin-left: 45%;
      }
    }
 
 
    nav {
      background-color: white;
      display: flex;
      align-items: center;
      box-shadow: 0 8px 5px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      height: 80px;
 
