            margin-top: 5%;
        }
        button:active {
            transform: scale(.95);
        }
        button:focus {
            outline: none;
        }
        button.ghost {
            background: transparent;
            border-color: #fff;
        }
        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            width: 70%;
            transition: all .6s ease-in-out;
